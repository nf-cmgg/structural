{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/CenterForMedicalGeneticsGhent/nf-cmgg-structural/master/assets/schema_input.json",
    "title": "CenterForMedicalGeneticsGhent/nf-cmgg-structural pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "meta": ["id", "sample"]
            },
            "cram": {
                "type": "string",
                "pattern": "^\\S+\\.(cr|b)am$",
                "format": "file-path",
                "exists": true
            },
            "crai": {
                "type": "string",
                "pattern": "^\\S+\\.(crai|bai|csi)$",
                "format": "file-path",
                "exists": true
            },
            "small_variants": {
                "type": "string",
                "pattern": "^\\S+\\.vcf(\\.gz)?$",
                "format": "file-path",
                "exists": true
            },
            "sex": {
                "type": "string",
                "meta": ["sex"],
                "enum": ["male", "female"]
            }
        },
        "required": ["sample", "cram"]
    }
}

nextflow_pipeline {

    name "Tests using multiple callers with families"
    script "main.nf"
    tag "multi_family"

    test("Success - no concat") {
        when {
            params {
                callers = "delly,manta,smoove,qdnaseq,expansionhunter"
                outdir = "${outputDir}"
                input = "${projectDir}/tests/inputs/samplesheet_family.csv"
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert file("${outputDir}/test_family/test_family.sv.vcf.gz").exists() },
                { assert file("${outputDir}/test_family/test_family.sv.vcf.gz.tbi").exists() },
                { assert file("${outputDir}/test_family/test_family.cnv.vcf.gz").exists() },
                { assert file("${outputDir}/test_family/test_family.cnv.vcf.gz.tbi").exists() },
                { assert file("${outputDir}/test_family/test_family.repeats.vcf.gz").exists() },
                { assert file("${outputDir}/test_family/test_family.repeats.vcf.gz.tbi").exists() }
            )
        }
    }

    test("Success - concat") {
        when {
            params {
                callers = "delly,manta,smoove,qdnaseq,expansionhunter"
                outdir = "${outputDir}"
                input = "${projectDir}/tests/inputs/samplesheet_family.csv"
                concat_output = true
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert file("${outputDir}/test_family/test_family.vcf.gz").exists() },
                { assert file("${outputDir}/test_family/test_family.vcf.gz.tbi").exists() }
            )
        }
    }
}

nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    tag "pipeline"
    tag "pipeline_sv"

    options "-stub"

    test("one caller") {

        when {
            params {
                outdir = "${outputDir}"
                callers = "delly"
                max_cpus   = 2
                max_memory = '6.GB'
                max_time   = '6.h'
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    workflow.stdout,
                    path("${outputDir}")
                        .list()
                        .collect { getRecursiveFileNames(it, "${outputDir}") }
                        .flatten()
                        .findAll {
                            !it.contains("pipeline_info/")
                        }
                ).match("delly")}
            )
        }

    }

    test("all callers") {

        when {
            params {
                outdir = "${outputDir}"
                callers = "sv"
                max_cpus   = 2
                max_memory = '6.GB'
                max_time   = '6.h'
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    workflow.stdout,
                    path("${outputDir}")
                        .list()
                        .collect { getRecursiveFileNames(it, "${outputDir}") }
                        .flatten()
                        .findAll {
                            !it.contains("pipeline_info/")
                        }
                ).match("all")}
            )
        }

    }

}

def getRecursiveFileNames(fileOrDir, outputDir) {
    if(file(fileOrDir.toString()).isDirectory()) {
        return fileOrDir.list().collect { getRecursiveFileNames(it, outputDir) }
    }
    return fileOrDir.toString().replace("${outputDir}/", "")
}

nextflow_workflow {

    name "Test Workflow BAM_VARIANT_CALLING_DELLY"
    script "subworkflows/local/bam_variant_calling_delly/main.nf"
    workflow "BAM_VARIANT_CALLING_DELLY"

    tag "subworkflows"
    tag "subworkflows_local"
    tag "bam_variant_calling_delly"

    test("homo_sapiens") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [id:"test", sample:"test", sex:"male"],
                    file(params.cram1, checkIfExists: true),
                    file(params.crai1, checkIfExists: true)
                ])
                input[1] = Channel.value([
                    [id:"fasta"],
                    file(params.fasta, checkIfExists: true)
                ])
                input[2] = Channel.value([
                    [id:"fai"],
                    file(params.fai, checkIfExists: true)
                ])
                input[3] = Channel.fromPath("\${params.svync_configs}/*.yaml", checkIfExists:true).collect()
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    workflow.out.collectEntries { key, value ->
                        if(key.matches("^\\d+\$") || key == "versions") {
                            return null
                        }
                        else if(key.contains("vcf")) {
                            return [
                                key,
                                value.collect { meta, vcf, tbi ->
                                    [meta, "${file(vcf).name},variantsMD5:${path(vcf).vcf.variantsMD5}", file(tbi).name ]
                                }
                            ]
                        }
                        return [key, value]
                    }
                    .findAll { it != null }
                ).match() }
            )
        }

    }

}
